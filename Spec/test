describe('when a customer is saved', function() {
    it('should fail with validation errors for each required field', function() {
        var customer = new Customer();
        customer.save(function(err) {
            expect(err).not.toBeNull();
            expect(err).toHaveRequiredValidationErrorFor('title');
            expect(err).toHaveRequiredValidationErrorFor('content');
            asyncSpecDone();
        });
        asyncSpecWait();
    });
});
 
});